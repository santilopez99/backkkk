<section id="register-container">

    <article id="register">
        <div id="register-header">
            <h1 id="header-title">Register</h1>
        </div>

        <form id="register-form">
            
            <div class="input-container">
                <label for="first_name-input">Name:</label>
                <input type="text" id="first_name-input">
            </div>

            <div class="input-container">
                <label for="last_name-input">Surname: </label>
                <input type="text" id="last_name-input">
            </div>

            <div class="input-container">
                <label for="email-input">Email: </label>
                <input type="email" id="email-input">
            </div>

            <div class="input-container">
                <label for="age-input">Age: </label>
                <input type="number" id="age-input">
            </div>

            <div class="input-container">
                <label for="password-input">Password: </label>
                <input type="password" name="" id="password-input">
            </div>

            <input type="submit" value="Register" id="register-input">
        </form>
    </article>

</section>