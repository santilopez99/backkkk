<section id="login-container">

    <article id="login">
        <div id="login-header">
            <h1 id="header-title">Log In</h1>
        </div>

        <form id="login-form">
            <div class="input-container">
                <label for="email-input">Email: </label>
                <input type="email" id="login-email-input">
            </div>

            <div class="input-container">
                <label for="password-input">Password: </label>
                <input type="password" name="" id="login-password-input">
            </div>

            <input type="submit" value="login" id="login-input">
        </form>
    </article>

</section>